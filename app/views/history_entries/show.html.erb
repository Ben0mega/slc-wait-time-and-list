
<div id="title-backdrop"></div>

<h1 class="title">Berkeley Student Learning Center</h1>

<h1 class="subtitle">Search Histories</h1>

<div class="form-container container-fluid">

    <%= form_tag(history_entries_path, method: "get") do %>
        <div class="col-2">
              <%= label_tag(:history_dates, "Search for:") %>
              <%= date_field_tag(:history_dates) %>
        </div>
        <br/>

        <div class="col-2">
            <%= submit_tag"Submit", :id => "form-submit", :class =>"btn btn-primary" %>
        </div>
    <% end %>

</div>

<% if @found == false %>
    <br/>
    <br/>
    <h2>No history entries were found for <%= @date.strftime("%A, %B %d, %Y") %>.</h2>
<% elsif @found == true %>
<div class="form-container container-fluid">
    <h1>Drop-in</h1>
    <table id="queue" class="queue">
    <tr>
      <th>Number</th>
      <th>Waiting</th>
      <th>Name</th>
      <th>Course</th>
    </tr>
    
    <tr>
    <% @drop_in_queue.each do |entry| %>
          <tr id="q_row">
            <td></td>
            <td><%= time_diff(entry.created_at, Time.now) %></td>
            <td><%= %Q(#{entry.student.first_name} #{entry.student.last_name}) %></td>
            <td><div style="float: left; width: auto;"><%= entry.course %></div> <%= button_to("Activate", activate_session_path(entry.id), :method => :patch, :id => "#{entry.id}") %></td>
            <% end %>
          </tr>
    </tr>
    </table>
    
    <h1>Weekly</h1>
